<Window x:Class="WaveLengthToColor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveLengthToColor"
        mc:Ignorable="d"
        Title="Цвет &lt;-&gt; длина волны" Height="242" Width="484" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image x:Name="Color_image" Height="130" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="451"/>
        <Slider x:Name="WaveLength_slider" Margin="10,176,0,0" VerticalAlignment="Top" Minimum="400" Maximum="700" Value="550" ValueChanged="WaveLength_slider_ValueChanged" HorizontalAlignment="Left" Width="451"/>
        <Label x:Name="WaveLength_label" Content="" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Width="451" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
